<% if(user) { %>
	<%- include("./partials/logout") %>
<% } %>

<div id="usersList" style="overflow-y: scroll; overflow-x: wrap; width: 100px; height: 100px; background-color: green; color: white;">
</div>

<input type="url" id="imageUrl" placeholder="link to your profile image">
<button id="setImage">SET IMAGE</button>

<% if(user.image) { %>
	<image src="<%=user.image%>">
<% } %>

<div id="chatroom"></div>
<textarea id="message" placeholder="write your message here"></textarea>
<button id="send">SEND</button>

<div id="media">
<b>Photo and Video LINK sharing</b>
<input type="url" id="photo" placeholder="enter link to the photo here">
<button id="sendPhoto">SHARE PHOTO</button>

<input type="url" id="video" placeholder="enter link to the video here">
<button id="sendVideo">SHARE VIDEO</button>
<div>

<input type="text" id="room" placeholder="which room to join">
<button id="join">JOIN</button>
